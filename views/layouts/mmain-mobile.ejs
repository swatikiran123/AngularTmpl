<!DOCTYPE html>

<!--[if lt IE 7]>      <html lang="en" ng-app="baseApp" class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="en" ng-app="baseApp" class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="en" ng-app="baseApp" class="no-js lt-ie9"> <![endif]-->

<!--[if gt IE 8]><!--> <html lang="en" <%-appName%> class="no-js"> <!--<![endif]-->

<head>

	<% include ../partials/head.ejs%>
	<!-- standard assets  -->
	<%-locals.stdAssets%>
	<!-- application assets  -->
	<%-locals.appAssets%>
<style>.sb-profile{
  padding-top: 0px;
}
.pg-content{


  width: 98%;
}

#page {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;

}

#page.toggled {
    padding-left: 250px;
}

#sb-wrapper {
    z-index: 1000;
    position: fixed;
    left: 250px;
    width: 0;
    height: 100%;
    margin-left: -250px;
    overflow-y: auto;
    background: #fff;
    box-shadow: 3px 3px 5px #888888;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#page.toggled #sb-wrapper {
    width: 250px;
}

#pg-content-wrapper {
    width: 100%;
    position: absolute;
    padding: 15px;
}

#page.toggled #pg-content-wrapper {
    position: absolute;
    margin-right: -250px;
}

.sb-menu {
    position: relative;
    margin: 0;
    padding: 0;
    list-style: none;
}

.sb-menu ul {

    -webkit-margin-before: 0em;
    -webkit-margin-after: 0em;
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
    -webkit-padding-start: 2px;

}

.sb-menu  ul{
    list-style: none;
}

.sb-menu  ul li {
  border-bottom: 1px solid #ddd;
}
.icon-dashboard{
  color: pink;
}

.sidebar-item {
  position: relative;
  font-size: 13px;
  z-index: 1;
  background: white;
  width: 100%;
  padding-bottom: 5px;
}

.sidebar-item a {
  display: block;
  padding: 12px;
  padding-left: 0px;
  color: #2a2a2a;
  font-family: robotoLight;
  font-size: 1.1em;
	decoration:none;
}

.menu-icon{
  width: 20px;
  height: 20px;
  display: inline-block;
  margin-right: 15px;
}

.menu-profile-pic,
.menu-profile-name {
  text-align: center;
  padding: 10px;
  background-color: #f3f2f7;
  font-family: workSansRegular;
  font-size: 1.3em;
  color: #606060;
}

.menu-profile-pic img {
    width: 75px;
    height: 75px;
    border-radius: 150px;
    -webkit-border-radius: 150px;
    -moz-border-radius: 150px;
    box-shadow: 0 0 8px rgba(0, 0, 0, .8);
    -webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
    -moz-box-shadow: 0 0 8px rgba(0, 0, 0, .8);

}

.menu-profile-name {
  padding-top: 7px;
}



@media(min-width:768px) {
    #page {
        padding-left: 250px;
    }

    #page.toggled {
        padding-left: 0;
    }

    #sb-wrapper {
        width: 250px;
    }

    #page.toggled #sb-wrapper {
        width: 0;
    }

    #pg-content-wrapper {
        padding: 10px;
        position: relative;
    }

    #page.toggled #pg-content-wrapper {
        position: relative;
        margin-right: 0;
    }
}
#sb-wrapper h1{
  color: #006699;
  padding-left: 30px;
}

</style>
</head>

<body>
	<div id="page">

		<!-- Sidebar -->
		<div id="sb-wrapper"><h1>Mobile Portal</h1>
		    <div class="sb-profile">
				<%if (locals.user !== undefined) { %>
				<div class="menu-profile-pic"><img src="<%=locals.user.avatar%>"></div>
				<div class="menu-profile-name"><%=locals.user.name.first%> <%=locals.user.name.last%></div>
				<% } %>
			</div> <!-- sb-profile end -->
			<%-locals.menu %>
		</div> <!-- sb-wrapper -->

		<!-- Page Content -->
		<div id="pg-content-wrapper">
			<div class="pg-content">
				<div class="ng-content">
				<%- body%>
				</div>
			</div> <!-- end container -->
		</div> <!-- page-content-wrapper -->
	</div> <!-- end of page wrapper -->
<!-- Menu Toggle Script -->
</body>

</html>
